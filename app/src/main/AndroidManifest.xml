<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.tcc.economy" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />
    <uses-feature
        android:name="android.software.leanback"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DespesaActivity"
            android:label="@string/title_activity_despesa" >
        </activity>
        <activity
            android:name=".PrincipalActivity"
            android:label="@string/title_activity_principal" >
        </activity>
        <activity
            android:name=".ReceitaActivity"
            android:label="@string/title_activity_receita" >
        </activity>
        <activity
            android:name=".ExtratoActivity"
            android:label="@string/title_activity_extrato" >
        </activity>
        <activity
            android:name=".ExtratoImpressoActivity"
            android:label="@string/title_activity_extrato_impresso" >
        </activity>
        <activity
            android:name=".ConfigActivity"
            android:label="@string/title_activity_config" >
        </activity>
        <activity
            android:name=".DespesaFormActivity"
            android:label="@string/title_activity_despesa_form"
            android:windowSoftInputMode="stateVisible">
        </activity>
        <activity
            android:name=".CategoriaActivity"
            android:label="@string/title_activity_categoria" >
        </activity>
        <activity
            android:name=".ContaActivity"
            android:label="@string/title_activity_conta" >
        </activity>
        <activity
            android:name=".CategoriaFormActivity"
            android:label="@string/title_activity_categoria_form"
            android:windowSoftInputMode="stateVisible">
        </activity>

    </application>

</manifest>
