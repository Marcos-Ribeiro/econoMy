<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--estilo geral-->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">#ace</item>
        <item name="android:buttonStyle">@style/btn</item>

    </style>
    <style name="btn" parent="@android:style/Widget.Button">
        <item name="android:textColor">#fff</item>
        <item name="android:background">#38c</item>
        <item name="android:padding">13dp</item>
    </style>

    <!--estilo login-->
    <style name="login" parent="Theme.AppCompat.Light">
        <item name="android:editTextStyle">@style/edt_login</item>
        <item name="android:buttonStyle">@style/btn_login</item>
    </style>
    <style name="btn_login" parent="android:style/Widget.Button">
        <item name="android:textColor">#fff</item>
        <item name="android:background">#38c</item>
        <item name="android:padding">13dp</item>
    </style>
    <style name="edt_login" parent="android:style/Widget.EditText">
        <item name="android:textColor">#222</item>
        <item name="android:background">#fff</item>
        <item name="android:padding">6dp</item>
    </style>
</resources>

