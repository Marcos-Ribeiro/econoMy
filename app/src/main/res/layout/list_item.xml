<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:id="@+id/list_item"
    android:clickable="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Campo 1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/lblCampo1"
        android:textColor="#38c"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Campo 2"
        android:id="@+id/lblCampo2"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/lblCampo1"
        android:layout_alignLeft="@+id/lblCampo1"
        android:layout_alignStart="@+id/lblCampo1" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Campo 3"
        android:id="@+id/lblCampo3"
        android:layout_above="@+id/lblCampo2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Campo 4"
        android:id="@+id/lblCampo4"
        android:visibility="visible"
        android:layout_alignTop="@+id/lblCampo2"
        android:layout_alignLeft="@+id/lblCampo3"
        android:layout_alignStart="@+id/lblCampo3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Pago"
        android:id="@+id/lblPago"
        android:textStyle="bold"
        android:layout_alignTop="@+id/lblCampo4"
        android:layout_centerHorizontal="true" />

</RelativeLayout>